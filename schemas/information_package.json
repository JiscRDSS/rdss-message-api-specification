{
  "id": "https://www.jisc.ac.uk/rdss/schema/information_package.json/#",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "definitions": {
    "InformationPackage": {
      "type": "object",
      "properties": {
        "packageUUID": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/UUID"
        },
        "packageDate": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/research_object.json/#/definitions/Date"
          },
          "minItems": 1
        },
        "packageRelatedIdentifier": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/research_object.json/#/definitions/IdentifierRelationship"
          }
        },
        "packagePreservationEvent": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/intellectual_asset.json/#/definitions/PreservationEvent"
          }
        },
        "packageType": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/enumeration.json/#/definitions/PackageType"
        },
        "packageContainerType": {
            "$ref": "https://www.jisc.ac.uk/rdss/schema/enumeration.json/#/definitions/ContainerType"
        },
        "packageDescription": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/NonEmptyString"
        }
      },
      "required": [
        "packageUUID",
        "packageDate",
        "packageRelatedIdentifier",
        "packagePreservationEvent",
        "packageType",
        "packageContainerType"
      ],
      "additionalProperties": false
    }
  }
}
