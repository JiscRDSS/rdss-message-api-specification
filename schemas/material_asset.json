{
  "id": "https://www.jisc.ac.uk/rdss/schema/material_asset.json/#",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "definitions": {
    "Organisation": {
      "type": "object",
      "properties": {
        "organisationJiscId": {
          "type": "integer"
        },
        "organisationName": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/NonEmptyString"
        },
        "organisationType": {
          "type": "integer",
          "minimum": 1,
          "maximum": 15
        },
        "organisationAddress": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/NonEmptyString"
        }
      },
      "required": [
        "organisationJiscId",
        "organisationName",
        "organisationType",
        "organisationAddress"
      ],
      "additionalProperties": false
    },
    "Person": {
      "type": "object",
      "properties": {
        "personUUID": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/UUID"
        },
        "personIdentifier": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/PersonIdentifier"
          },
          "minItems": 1
        },
        "personHonorificPrefix": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/NonEmptyString"
        },
        "personGivenNames": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/NonEmptyString"
        },
        "personFamilyNames": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/NonEmptyString"
        },
        "personHonorificSuffix": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/NonEmptyString"
        },
        "personMail": {
          "type": "string",
          "format": "email"
        },
        "personOrganisationUnit": {
          "$ref": "#/definitions/OrganisationUnit"
        }
      },
      "required": [
        "personUUID",
        "personIdentifier",
        "personGivenNames",
        "personFamilyNames",
        "personOrganisationUnit"
      ],
      "additionalProperties": false
    },
    "OrganisationUnit": {
      "type": "object",
      "properties": {
        "organisationUnitUUID": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/UUID"
        },
        "organisationUnitName": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/NonEmptyString"
        },
        "organisation": {
          "$ref": "#/definitions/Organisation"
        }
      },
      "required": [
        "organisationUnitUUID",
        "organisationUnitName",
        "organisation"
      ],
      "additionalProperties": false
    },
    "PersonIdentifier": {
      "type": "object",
      "properties": {
        "personIdentifierValue": {
          "$ref": "https://www.jisc.ac.uk/rdss/schema/types.json/#/definitions/NonEmptyString"
        },
        "personIdentifierType": {
          "type": "integer",
          "minimum": 1,
          "maximum": 6
        }
      },
      "required": [
        "personIdentifierValue",
        "personIdentifierType"
      ],
      "additionalProperties": false
    }
  }
}
